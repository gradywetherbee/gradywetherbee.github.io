		body {
			text-align: center;
			font-family: 'Dancing Script', cursive;
			font-weight:lighter;
			color:white;
			display:block;
			background-image:url(/images/goldenGate.jpg);
			background-attachment:fixed;
			background-size:cover;
			background-position:center;
			background-color:maroon;
		}
		h1 {
			display:block;
			font-size:500%;
			letter-spacing:0.1em;
			color:white;
		}

	
		#menu ul{
			position:relative;
			padding:0%;
			margin:0 auto;
			list-style-type:none; 
			
		}

		#menu ul li {
		    opacity:0.8;
			display:inline;
			margin:2%;
			padding:5% 10%;
			border-radius:0.4em;
			background-color:#000;
			background-repeat:no-repeat;
			background-position:center;
		}
		
		hr {
			margin-top:-2rem;
			height: 10px;
			border: 0;
			width: 40%;
			box-shadow: 0 13px 5px -10px #fff inset;
			border-radius:0.2em;
			margin-bottom:0%;
		}
		
		@media(max-width:1000px) {
		#menu ul li {
		    opacity:0.8;
			display:inline;
			margin:3% 1%;
			padding:6% 12%;
			border-radius:0.4em;
			background-color:#fff;
			background-repeat:no-repeat;
			background-position:center;
		}
		hr {
			height: 10px;
			border: 0;
			width: 40%;
			box-shadow: 0 13px 5px -10px #fff inset;
			border-radius:0.2em;
			margin-bottom:38%;
		}
		}
		@media(min-width:1001px) {
		#menu ul li {
		    opacity:0.8;
			display:inline;
			margin:2%;
			padding:5% 10%;
			border-radius:0.4em;
			background-color:#fff;
			background-repeat:no-repeat;
			background-position:center;
		}
		hr {
			height: 10px;
			border: 0;
			width: 30%;
			box-shadow: 0 13px 5px -10px #fff inset;
			border-radius:0.2em;
			margin-bottom:20%;
		}
		}
		@media(min-width:1501px) {
		#menu ul li {
		    opacity:0.8;
			display:inline;
			margin:2%;
			padding:5% 10%;
			border-radius:0.4em;
			background-color:#fff;
			background-repeat:no-repeat;
			background-position:center;
		}
		hr {
			height: 10px;
			border: 0;
			width: 30%;
			box-shadow: 0 13px 5px -10px #fff inset;
			border-radius:0.2em;
			margin-bottom:16%;
		}
		}
		
		#menu ul li:hover
		{
			opacity:1;
			
		}
